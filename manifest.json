{
  "name": "AI Domain Detector & Gateway",
  "description": "Detects AI domains and activities, redirecting to an organizational gateway.",
  "version": "1.2",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.openai.com/*",
        "*://*.chatgpt.com/*",
        "*://*.anthropic.com/*",
        "*://*.claude.ai/*",
        "*://*.midjourney.com/*",
        "*://*.perplexity.ai/*",
        "*://*.poe.com/*",
        "*://*.jasper.ai/*",
        "*://*.copy.ai/*",
        "*://*.quillbot.com/*",
        "*://*.huggingface.co/*",
        "*://*.character.ai/*",
        "*://*.civitai.com/*",
        "*://*.leonardo.ai/*",
        "*://*.deepl.com/*",
        "*://*.grammarly.com/*",
        "*://gemini.google.com/*",
        "*://bard.google.com/*",
        "*://aistudio.google.com/*",
        "*://copilot.microsoft.com/*",
        "*://designer.microsoft.com/*",
        "*://create.bing.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["gateway.html"],
      "matches": ["<all_urls>"]
    }
  ]
}